<%- include("../partial/header.ejs") %>

    <%- include('../partial/breadcrumbs.ejs') %>


        <!-- Client Details -->
        <div class="clientdetail commpadisecar">
            <div class="container">
                <div class="row">
                    <div class="draftbox norformsetup">
                        <% if (userData) { %>
                            <!-- Multipal  Url Shortener-->
                            <form action="/Collaborators/UpdateUser/<%= userData.U_URl_ID %>" method="post">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Name <sup>*</sup></label>
                                            <input type="text" class="form-control" name="Name"
                                                value="<%= userData.Name %>" required>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Email <sup>*</sup></label>
                                            <input type="email" class="form-control" name="Email"
                                                value="<%= userData.Email %>" required>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Phone </label>
                                            <input type="number" class="form-control" name="PhoneNumber"
                                                value="<%= userData.Mobile_Number %>" required>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Acount Type <sup>*</sup></label>
                                            <select class="form-control" name="AcountType" required>
                                                <option value="<%= userData.Mobile_Number %>" selected>
                                                    <%= userData.Acount %>
                                                </option>
                                                <option value="TeamLead">Team Lead</option>
                                                <option value="Operation">Operation</option>
                                                <option value="Sale">Sale</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Department <sup>*</sup></label>
                                            <select class="form-control" name="Department">
                                                <% JobProfile.forEach(profile=> { %>
                                                    <option value="<%= profile.jobDetails.Department %>"
                                                        <%=userData.Department===profile.jobDetails.Department
                                                        ? 'selected' : '' %>>
                                                        <%= profile.jobDetails.Department %>
                                                    </option>
                                                    <% }); %>

                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Department Head <sup>*</sup></label>
                                            <select class="form-control" name="Department_head">
                                                <% JobProfile.forEach(profile=> { %>
                                                    <option value="<%= profile.jobDetails.Department_Head %>"
                                                        <%=userData.Department_head===profile.jobDetails.Department_Head
                                                        ? 'selected' : '' %>>
                                                        <%= profile.jobDetails.Department_Head %>
                                                    </option>
                                                    <% }); %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Profile Post <sup>*</sup></label>
                                            <select class="form-control" name="Job_Profile_Post">
                                                <% JobProfile.forEach(profile=> { %>
                                                    <option value="<%= profile.jobDetails.Profile_Post %>"
                                                        <%=userData.Job_Profile_Post===profile.jobDetails.Profile_Post
                                                        ? 'selected' : '' %>>
                                                        <%= profile.jobDetails.Profile_Post %>
                                                    </option>
                                                    <% }); %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Job Profile <sup>*</sup></label>
                                            <select class="form-control" name="JobProfile">
                                                <% JobProfile.forEach(profile=> { %>
                                                    <option value="<%= profile.jobDetails.Job_Profile %>"
                                                        <%=userData.JobProfile===profile.jobDetails.Job_Profile
                                                        ? 'selected' : '' %>>
                                                        <%= profile.jobDetails.Job_Profile %>
                                                    </option>
                                                    <% }); %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Password <sup>*</sup></label>
                                            <input type="password" class="form-control" name="Password" value=""
                                                required>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Confirm Password <sup>*</sup></label>
                                            <input type="password" class="form-control" name="ConfirmPassword" value=""
                                                required>
                                        </div>
                                    </div>
                                </div>
                                <button class="fosavbtn" type="submit">Save </button>
                            </form>
                            <% } else { %>
                                <h6>No User Found </h6>
                                <% } %>
                    </div>
                </div>
            </div>
        </div>


        <%- include("../partial/footer.ejs") %>