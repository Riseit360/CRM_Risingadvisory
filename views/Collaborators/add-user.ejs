<%- include("../partial/header.ejs") %>

    <%- include('../partial/breadcrumbs.ejs') %>


        <!-- Client Details -->
        <div class="clientdetail commpadisecar">
            <div class="container">
                <div class="row">
                    <div class="draftbox norformsetup">
                        <!-- Multipal  Url Shortener-->
                        <form action="/Collaborators/adduser" method="post">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Name <sup>*</sup></label>
                                        <input type="text" class="form-control" name="Name" placeholder="Enter Name"
                                            required>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Email <sup>*</sup></label>
                                        <input type="email" class="form-control" name="Email" placeholder="Enter Email"
                                            required>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Phone </label>
                                        <input type="number" class="form-control" name="PhoneNumber"
                                            placeholder="Enter Phone" required>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Acount Type <sup>*</sup></label>
                                        <select class="form-control" name="AcountType" required>
                                            <option value="Admin">Admin</option>
                                            <option value="TeamLead">Team Lead</option>
                                            <option value="Operation">Operation</option>
                                            <option value="Sale">Sale</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Department <sup>*</sup></label>
                                        <select class="form-control" name="Department">
                                            <% JobProfile.forEach(JobProfile=> { %>
                                                <option value="<%= JobProfile.jobDetails.Department %>">
                                                    <%= JobProfile.jobDetails.Department %>
                                                </option>
                                                <% }); %>

                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Department Head <sup>*</sup></label>
                                        <select class="form-control" name="Department_head">
                                            <% JobProfile.forEach(JobProfile=> { %>
                                                <option value="<%= JobProfile.jobDetails.Department_Head %>">
                                                    <%= JobProfile.jobDetails.Department_Head %>
                                                </option>
                                                <% }); %>

                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Profile Post<sup>*</sup></label>
                                        <select class="form-control" name="Job_Profile_Post">
                                            <% JobProfile.forEach(JobProfile=> { %>
                                                <option value="<%= JobProfile.jobDetails.Profile_Post %>">
                                                    <%= JobProfile.jobDetails.Profile_Post %>
                                                </option>
                                                <% }); %>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Job Profile<sup>*</sup></label>
                                        <select class="form-control" name="JobProfile">
                                            <% JobProfile.forEach(JobProfile=> { %>
                                                <option value="<%= JobProfile.jobDetails.Job_Profile %>">
                                                    <%= JobProfile.jobDetails.Job_Profile %>
                                                </option>
                                                <% }); %>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Password <sup>*</sup></label>
                                        <input type="password" class="form-control" name="Password"
                                            placeholder="Enter Password" required>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Confirm Password <sup>*</sup></label>
                                        <input type="password" class="form-control" name="ConfirmPassword"
                                            placeholder="Enter Confirm Password" required>
                                    </div>
                                </div>
                            </div>
                            <button class="fosavbtn" type="submit">Save </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>


        <%- include("../partial/footer.ejs") %>