<%- include('../partial/style.ejs') %>
    <div class="singup logincompapaddiare">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="singupimg">
                        <img src="/Images/back.webp" alt="">
                    </div>
                </div>
                <div class="col-md-6">
                    <form method="post" action="/auth/OTP-Verify">
                        <h3>Create an account <a href="/login">log in instead</a> </h3>

                        <p class="otpsend"><b>OTP send Succesfuuly in your Mail Id </b></p>

                        <div class="form-group" name="LoginRoll">
                            <label>I am</label>
                            <select class="form-control" name="Iam">
                                <option value="User" <%=userData.Iam==='User' ? 'selected' : '' %>>User</option>
                                <option value="Client" <%=userData.Iam==='Client' ? 'selected' : '' %>>Client</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" name="Name" class="form-control" value="<%= userData.Name %>">
                        </div>
                        <div class="form-group">
                            <input type="number" name="MobileNumber" class="form-control"
                                value="<%= userData.MobileNumber %>">
                        </div>
                        <div class="form-group">
                            <input type="password" name="Password" class="form-control"
                                value="<%= userData.Password %>">
                        </div>
                        <div class="form-group">
                            <div class="otpgenerate">
                                <input type="email" name="Email" class="form-control" value="<%= userData.Email %>">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="otpgenerate">
                                <input type="text" name="OTP" class="form-control" placeholder="Enter OTP">
                            </div>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" name="AgreePolicy" class="form-check-input"
                                <%=userData.AgreePolicy==='on' ? 'checked' : '' %> >
                            <label class="form-check-label">By creating an account, I agree to our <a href="/">Terms of
                                    use</a> and <a href="/">Privacy Policy</a></label>
                        </div>
                        <button type="submit" class="btn">Verify OTP</button>
                    </form>

                </div>
            </div>
        </div>
    </div>

    <%- include('../partial/script.ejs') %>