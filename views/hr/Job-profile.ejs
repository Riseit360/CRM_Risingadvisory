<%- include("../partial/header.ejs") %>

    <%- include('../partial/breadcrumbs.ejs') %>

        <!-- Client Details -->
        <div class="clientdetail commpadisecar">
            <div class="container">
                <div class="row">
                    <div class="draftbox">

                        <!-- views/main/url.ejs -->
                        <table class="table largedatatable">
                            <thead>
                                <tr>
                                    <th>SNo</th>
                                    <th>ID</th>
                                    <th>Edit</th>
                                    <th>Track ID</th>
                                    <th>Job Profile</th>
                                    <th>Department</th>
                                    <th>Department Head</th>
                                    <th>Salary Range</th>
                                    <th>Profile Post</th>
                                    <th>Employment Type</th>
                                    <th>location</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                    <th>More/Less</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (Data && Array.isArray(Data) && Data.length> 0) { %>
                                    <% Data.forEach((data, index)=> { %>
                                        <tr>
                                            <td>
                                                <%= index + 1 %>
                                            </td>
                                            <td>
                                                <a href="/hr/Job-profile/update/<%= data.U_URl_ID %>">Edit</a>
                                            </td>
                                            <td>
                                                <%= data.U_URl_ID %>
                                            </td>
                                            <td>
                                                <%= data.UserAgentID %>
                                            </td>
                                            <td>
                                                <%= data.jobDetails.Job_Profile %>
                                            </td>
                                            <td>
                                                <%= data.jobDetails.Department %>
                                            </td>
                                            <td>
                                                <%= data.jobDetails.Department_Head %>
                                            </td>
                                            <td>
                                                <%= data.jobDetails.Salary_Range %>
                                            </td>
                                            <td>
                                                <%= data.jobDetails.Profile_Post %>
                                            </td>
                                            <td>
                                                <%= data.jobDetails.Employment_Type %>
                                            </td>
                                            <td>
                                                <%= data.jobDetails.location %>
                                            </td>
                                            <td>
                                                <a href="/hr/Job-profile/Status/<%= data.U_URl_ID %>">
                                                    <%= data.isActive ? 'Active' : 'Inactive' %>
                                                </a>
                                            </td>

                                            <td>
                                                <%= moment(data.Date).format('DD MMMM YYYY, h:mm:ss a') %>
                                            </td>
                                            <td>
                                                <span class="accordion" data-index="<%= index %>">Read More</span>
                                            </td>
                                            <td>
                                                <a href="/hr/Job-profile/delete/<%= data.U_URl_ID %>">
                                                    Delete
                                                </a>
                                            </td>
                                        </tr>
                                        <tr class="Showmedetaisl" id="details-<%= index %>">
                                            <td colspan="14">
                                                <div class="maindivshowread">
                                                    <h6>
                                                        <%= data.jobDetails.job_title %>
                                                    </h6>
                                                    <p>
                                                        <%- data.jobDescription.Job_Description %>
                                                    </p>
                                                    <p>
                                                        <%- data.jobDescription.Responsibilities %>
                                                    </p>
                                                    <p>
                                                        <%- data.jobDescription.Requirements %>
                                                    </p>
                                                </div>
                                            </td>
                                        </tr>


                                        <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="15">No URLs found or error retrieving data.</td>
                                                </tr>
                                                <% } %>
                            </tbody>
                        </table>

                        <!-- Pagination Controls -->
                        <nav>
                            <ul class="pagination">
                                <% if (currentPage> 1) { %>
                                    <li class="page-item"><a class="page-link"
                                            href="/hr/Job-profile?page=<%= currentPage - 1 %>&pageSize=<%= pageSize %>">Previous</a>
                                    </li>
                                    <% } %>
                                        <% for (let i=1; i <=totalPages; i++) { %>
                                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                <a class="page-link"
                                                    href="/hr/Job-profile?page=<%= i %>&pageSize=<%= pageSize %>">
                                                    <%= i %>
                                                </a>
                                            </li>
                                            <% } %>
                                                <% if (currentPage < totalPages) { %>
                                                    <li class="page-item"><a class="page-link"
                                                            href="/hr/Job-profile?page=<%= currentPage + 1 %>&pageSize=<%= pageSize %>">Next</a>
                                                    </li>
                                                    <% } %>
                            </ul>
                        </nav>


                    </div>
                </div>
            </div>
        </div>



        <%- include("../partial/footer.ejs") %>