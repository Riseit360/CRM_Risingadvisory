<%- include("../partial/header.ejs") %>

    <%- include('../partial/breadcrumbs.ejs') %>

        <!-- Client Details -->
        <div class="clientdetail commpadisecar">
            <div class="container">
                <div class="row">
                    <div class="draftbox">

                        <!-- views/main/url.ejs -->
                        <table class="table smaldatatable">
                            <thead>
                                <tr>
                                    <th>SNo</th>
                                    <th>UTM Source</th>
                                    <th>UTM Medium</th>
                                    <th>UTM Campaign</th>
                                    <th>UTM Term</th>
                                    <th>UTM Content</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (Data && Array.isArray(Data) && Data.length> 0) { %>
                                    <% Data.forEach((data, index)=> { %>
                                        <tr>
                                            <td>
                                                <%= index + 1 %>
                                            </td>
                                            <td>
                                                <span>UTM Source</span>
                                                <%= data.utm_source %>
                                            </td>
                                            <td>
                                                <span>UTM Medium</span>
                                                <%= data.utm_medium %>
                                            </td>
                                            <td>
                                                <span>UTM Term</span>
                                                <%= data.utm_campaign %>
                                            </td>
                                            <td>
                                                <%= data.utm_term %>
                                            </td>
                                            <td><span>UTM Content</span>
                                                <%= data.utm_content %>
                                            </td>
                                            <td><span>Date</span>
                                                <%= moment(data.createdAt).format('DD MMMM YYYY, h:mm:ss a') %>
                                            </td>

                                        </tr>

                                        <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="7">No URLs found or error retrieving data.</td>
                                                </tr>
                                                <% } %>
                            </tbody>
                        </table>

                        <!-- Pagination Controls -->
                        <nav>
                            <ul class="pagination">
                                <% if (currentPage> 1) { %>
                                    <li class="page-item"><a class="page-link"
                                            href="/log/utm/?page=<%= currentPage - 1 %>&pageSize=<%= pageSize %>">Previous</a>
                                    </li>
                                    <% } %>
                                        <% for (let i=1; i <=totalPages; i++) { %>
                                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                <a class="page-link"
                                                    href="/log/utm/?page=<%= i %>&pageSize=<%= pageSize %>">
                                                    <%= i %>
                                                </a>
                                            </li>
                                            <% } %>
                                                <% if (currentPage < totalPages) { %>
                                                    <li class="page-item"><a class="page-link"
                                                            href="/log/utm/?page=<%= currentPage + 1 %>&pageSize=<%= pageSize %>">Next</a>
                                                    </li>
                                                    <% } %>
                            </ul>
                        </nav>


                    </div>
                </div>
            </div>
        </div>



        <%- include("../partial/footer.ejs") %>