                <div class="row">
                    <div class="draftbox">
                        <!-- Single Url Shortener-->
                        <form action="/shortener/shorten" method="post">
                            <div class="sinshourl">
                                <div class="form-group">
                                    <label>Single URL</label>
                                    <input class="form-control form-control-lg" name="longURL" type="text"
