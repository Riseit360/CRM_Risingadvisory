        <!-- Client Details -->
        <div class="clientdetail commpadisecar">
            <div class="container">
                <div class="row">
                    <div class="draftbox">
                        <!-- Multipal  Url Shortener-->
                        <form action="/shortener/bulkurlshortener" method="post">
                            <div class="multipalurlshort sinshourl">
                                <div class="form-group">
                                    <label>Bulk URL</label>
                                    <textarea class="form-control" placeholder="Bulk URL" name="BulkURL" rows="3"
                                        required=""></textarea>
                                </div>
                                <button class="fosavbtn" type="submit">Shorten</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Line Breack -->
