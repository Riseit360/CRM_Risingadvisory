                        <h4>OR</h4>
                    </div>
                </div>
            </div>
        </div>

        <!-- import  Details -->
        <div class="clientdetail commpadisecar">
            <div class="container">
                <div class="row">
                    <div class="draftbox">
                        <!-- Multipal  Url Shortener-->
                        <form action="/shortener/upload" method="post" enctype="multipart/form-data">
                            <div class="multipalurlshort sinshourl importinp">
                                <div class="form-group">
                                    <label>Import URL File</label>
                                    <input class="form-control form-control-lg" name="fileName" type="file" required=""
                                        accept=".xls,.xlsx,.doc,.docx,.txt,.csv">
                                </div>
                                <button class="fosavbtn" type="submit">Shorten</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

