<%- include("../partial/header.ejs") %>

    <%- include('../partial/breadcrumbs.ejs') %>


        <!-- Client Details -->
        <div class="clientdetail commpadisecar">
            <div class="container">
                <div class="row">
                    <div class="draftbox">

                        <!-- views/main/url.ejs -->
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>SNo</th>
                                    <th>Edit</th>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Mobile Number</th>
                                    <th>Verified</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (Data && Array.isArray(Data) && Data.length> 0) { %>
                                    <% Data.forEach((data, index)=> { %>
                                        <tr>
                                            <td>
                                                <%= index + 1 %>
                                            </td>
                                            <td>
                                                <a href="/leads/user/updateleads/<%= data.U_URl_ID %>">Edit</a>
                                            </td>
                                            <td>
                                                <%= data.U_URl_ID %>
                                            </td>
                                            <td>
                                                <%= data.Name %>
                                            </td>
                                            <td>
                                                <%= data.Email %>
                                            </td>
                                            <td>
                                                <%= data.Mobile_Number %>
                                            </td>

                                            <td>
                                                <%= data.isVerified %>
                                            </td>
                                            <td>
                                                <%= moment(data.Date).format('DD MMMM YYYY, h:mm:ss a') %>
                                            </td>
                                        </tr>
                                        <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="8">No URLs found or error retrieving data.</td>
                                                </tr>
                                                <% } %>
                            </tbody>
                        </table>

                        <!-- Pagination Controls -->
                        <nav>
                            <ul class="pagination">
                                <% if (currentPage> 1) { %>
                                    <li class="page-item"><a class="page-link"
                                            href="/leads/user?page=<%= currentPage - 1 %>&pageSize=<%= pageSize %>">Previous</a>
                                    </li>
                                    <% } %>
                                        <% for (let i=1; i <=totalPages; i++) { %>
                                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                <a class="page-link"
                                                    href="/leads/user?page=<%= i %>&pageSize=<%= pageSize %>">
                                                    <%= i %>
                                                </a>
                                            </li>
                                            <% } %>
                                                <% if (currentPage < totalPages) { %>
                                                    <li class="page-item"><a class="page-link"
                                                            href="/leads/user?page=<%= currentPage + 1 %>&pageSize=<%= pageSize %>">Next</a>
                                                    </li>
                                                    <% } %>
                            </ul>
                        </nav>

                    </div>
                </div>
            </div>
        </div>



        <%- include("../partial/footer.ejs") %>